{
  "manifest_version": 3,
  "name": "Safety Assistant",
  "version": "1.0",
  "description": "AI-Powered Personal Digital Safety Assistant Browser Extension",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://your-backend-domain.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Safety Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}